char	*ft_strncpy(char *dest, char *src, unsigned int n)
{
	unsigned int	i1;
	unsigned int	i2;

	i1 = 0;
	i2 = 0;
	while (src[i1] && i1 < n)
	{
		dest[i1] = src[i1];
		i1++;
	}
	while (i2 < n)
	{
		dest[i2] = '\0';
		i2++;
	}
	return (dest);
}
